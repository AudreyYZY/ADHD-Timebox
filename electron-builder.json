{
  "appId": "com.adhdtimebox.app",
  "productName": "ADHD-Timebox",
  "asar": true,
  "directories": {
    "output": "dist",
    "buildResources": "resources/icons"
  },
  "files": [
    "out/**",
    "electron/dist/**",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "resources/backend",
      "to": "backend"
    },
    {
      "from": "resources/icons",
      "to": "icons"
    }
  ],
  "mac": {
    "target": ["dmg"],
    "icon": "resources/icons/icon.icns"
  },
  "win": {
    "target": ["nsis"],
    "icon": "resources/icons/icon.ico"
  },
  "linux": {
    "target": ["AppImage"],
    "icon": "resources/icons"
  }
}
